<h2>Available drones</h2>

,<div>
   <% drones.forEach(({ name, propellers, maxSpeed, _id }) => { %>
    <div style="border: 2px solid black; width: 400px; margin: 20px">
        <img src="../images/drone-pic.PNG" alt="drone image" style="width: 390px" />
      <h4><strong> Name: <%= name %> </strong></h4>
      <h5>Propellers: <%= propellers %></h5>
      <h5>Maximum Speed: <%= maxSpeed %></h5>
      <br />
        <a href="/drones/<%= _id %>/edit">Edit drone</a>
        <br />
        <form action="/drones/<%= _id %>/delete" method="POST">
          <button type="submit">Delete</button>
        </form>
       </div>
    <% }) %>
    <br />
</div>
